{
  "manifest_version": 3,
  "name": "Coursera Theater Mode",
  "description": "Add theater mode to the Coursera video player.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.coursera.org/*"],
      "js": ["index.js"],
      "css": ["global.css"]
    }
  ],
  "icons": {
   "16": "icon/icon-16.png",
   "32": "icon/icon-32.png",
   "48": "icon/icon-48.png",
   "128": "icon/icon-128.png"
 }
}
