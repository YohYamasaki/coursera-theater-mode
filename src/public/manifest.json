{
  "manifest_version": 3,
  "name": "Coursera Theater Mode",
  "description": "Add theater mode to the Coursera video player.",
  "version": "1.0",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.coursera.org/learn/*"],
      "js": ["loader.js"],
      "css": ["global.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  }
}
